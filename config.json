{
    "port": 3002,
    "collection_interval_seconds": 30,
    "theforge_db_path": "/srv/forge-share/AI_Stuff/TheForge/theforge.db",
    "hosts": [
        {
            "name": "claudinator",
            "type": "local"
        },
        {
            "name": "cryptotrader-vm",
            "type": "ssh",
            "ssh_host": "10.10.10.2",
            "ssh_user": "user",
            "ssh_key_path": "/home/user/.ssh/id_ed25519"
        },
        {
            "name": "arcanedesk-vm",
            "type": "ssh",
            "ssh_host": "10.10.10.3",
            "ssh_user": "user",
            "ssh_key_path": "/home/user/.ssh/id_ed25519"
        }
    ],
    "default_alerts": [
        {
            "metric": "disk_percent",
            "operator": ">",
            "threshold": 90,
            "severity": "critical"
        },
        {
            "metric": "memory_percent",
            "operator": ">",
            "threshold": 85,
            "severity": "warning"
        },
        {
            "metric": "cpu_percent",
            "operator": ">",
            "threshold": 95,
            "severity": "warning"
        },
        {
            "metric": "backup_stale",
            "operator": ">",
            "threshold": 24,
            "severity": "warning"
        },
        {
            "metric": "service_down",
            "operator": "==",
            "threshold": 0,
            "severity": "critical"
        },
        {
            "metric": "container_down",
            "operator": "==",
            "threshold": 0,
            "severity": "critical"
        }
    ],
    "retention": {
        "metrics_full_days": 7,
        "metrics_downsampled_days": 30,
        "containers_days": 7,
        "alert_history_days": 90
    },
    "backups": [
        {
            "name": "local-restic",
            "type": "restic",
            "description": "Local backups to Windows box",
            "repo_path": "/mnt/backup-windows/claudinator-backups",
            "password_file": "/home/user/.restic-password",
            "stale_hours": 26
        },
        {
            "name": "offsite-linode",
            "type": "restic",
            "description": "Offsite backups to Linode via SFTP",
            "repo_path": "sftp:root@45.79.183.67:/backups/claudinator",
            "password_file": "/home/user/.restic-password",
            "stale_hours": 26
        }
    ]
}